<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Hardened Runtime: Allow JIT compilation (required for Python) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Hardened Runtime: Allow unsigned executable memory (required for PyInstaller) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Hardened Runtime: Disable library validation (required for bundled Python) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Camera access (required for focus detection) -->
    <key>com.apple.security.device.camera</key>
    <true/>
    
    <!-- Network access (required for OpenAI/Gemini API calls) -->
    <key>com.apple.security.network.client</key>
    <true/>
</dict>
</plist>
